{% set classes = [] %}

<div {{ attributes.setAttribute('id', 'page-wrapper') }} >
  <section id="page-header">
    {{ page.top_bar }}
    {{ page.header }}
  </section><!--//#page-header-->

  <section id="page-header-second">
    {{ page.primary_menu }}
    {{ page.secondary_menu }}
    {{ page.breadcrumb }}
    {{ page.page_top}}
    {{ page.highlighted }}
  </section>

  <section id="page-features-top">
    {% if show_featured_top %}
      {{ page.featured_top }}
    {% endif %}
  </section>

  <section id="page-content" class="container-fluid">
    <div>
      {% if page_layout == 'full' %}
        {# full layout #}
        {{ page.content }}
      {% elseif page_layout == 'three' %}
        <div class="col-sm-3 page-content-left">
          {{ page.left_content }}
        </div>
        <div class="col-sm-6 page-content">
          {{ page.content }}
        </div>
        <div class="col-sm-3 page-content-right">
          {{ page.right_content }}
        </div>
      {% else %}
        {# standard layout #}
        <div class="col-sm-9 page-content">
          {{ page.content }}
        </div>
        <div class="col-sm-3 page-content-right">
          {{ page.right_content }}
        </div>
      {% endif %}
    </div>
  </section><!--//#page-content-->

  <section id="page-features-bottom">
      {{ page.featured_bottom }}
      {{ page.page_bottom }}
  </section>

  <footer id="page-footer" class="site-footer">
    {{ page.footer }}
  </footer><!--//#page-footer-->

</div><!--//#page-wrapper-->