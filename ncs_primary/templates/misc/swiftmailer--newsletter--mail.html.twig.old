{#
/**
 * @file newsletter.html.twig
 * Default theme implementation to present Newsletter data.
 *
 * This template is used when viewing Newsletter pages.
 *
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 * - attributes: HTML attributes for the container element.
 * - message: params sent through the message
 *
 * @see template_preprocess_newsletter()
 *
 * @ingroup themeable
 */
#}
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=10">
    <meta http-equiv="pragma" content="no-cache">
    <meta name="referrer" content="never">
    <style>
      blockquote {display: block; -webkit-margin-before: 1em; -webkit-margin-after: 1em; -webkit-margin-start: 40px; -webkit-margin-end: 40px;}
      table {display: table; border-collapse: separate; border-spacing: 0px 5px; border-color: grey;}
    </style>
  </head>
  <blockquote type="cite">
    <table width="1000">
      <tr><td><img src="image:/themes/custom/onset/images/New-logo_1.png"></td></tr>
      <tr style="vertical-align: middle;">
        <td align="left">
          <h1>Today's Headlines</h1>
        </td>
        <td align="right">
          {{ message.params.date }}
        </td>
      </tr>
    </table>
    <table width="1000"><tr><td><hr></td></tr></table>
    <table width="1000">
      {% if message %}
        {% for entity in message.params.entities %}
          <tr bgcolor="#eeeeee">
            <td width="20%" height="150" align="middle" valign="middle">
              <a href="http://{{ message.params.domain }}/{{ message.params.alias[loop.index0] }}">
                <img width=100 height="100" src="{{ message.params.image[loop.index0] }}"/>
              </a>
            </td>
            <td width="80%" height="150" align="left" valign="top">
              <a height="10" valign="top" href="http://{{ message.params.domain }}/{{ message.params.alias[loop.index0] }}">
                <h2>{{ message.params.headline_a[loop.index0] }}</h2>
              </a>
              <p height="10">By {{ message.params.byline[loop.index0] }}</p>
              <p height="80">{{ message.params.body[loop.index0] }}</p>
            </td>
          </tr>
        {% endfor %}
      {% endif %}
      <tr>
        <td><a href="http://{{ message.params.domain }}{{  message.params.unsub_link }}">Unsubscribe</a></td>
      </tr>
    </table>
  </blockquote>
</html>