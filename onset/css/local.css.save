/*
  regions
  main navigation
  login modal / session menu
  social nav menu
  sidebar-group
  footer
*/


/* regions */
.region-top-bar {
    padding: 4px 0;
    background-color: #ececec;
}

.region-header {
    padding: 10px 0;
}

#block-mainmenu .nav > li > a {
    border-bottom:solid 2px white;
    color: black;
    font-size:12px;
}

#block-mainmenu .nav > li > a:hover {
    background:inherit;
    color:inherit;
}

#block-mainmenu .nav > li:hover > a span.menu-text {
    border-bottom:solid 2px black;
}

#block-mainmenu .nav > li > a[title="Home"] {
    background: #ffffff url("/themes/custom/onset/images/home.png") no-repeat right top;
    font-size: 0;
    width: 22px;
}

.dropdown:hover .dropdown-menu {
display: block;
}

/* home icon */

#block-mainmenu .navbar-nav > li > a[title="Home"] {
    background: #ffffff url("/themes/custom/onset/images/home.png") no-repeat right top;
    font-size: 0;
    width: 22px;
}


/* login modal and menu */

#onset-login .modal-dialog {
    width: 258px;
    color: black;
}

#onset-login .block-user-login-block .btn {
    background: white;
}

.menu--account .menu,
.onset-login-nav {
    font-family: 'Open Sans' , sans-serif !important;
    margin: 0;
    text-align: right;
    min-height: 20px;
    list-style: none;
}

.menu--account .menu #welcome-user,
.onset-login-nav #welcome-user {
    border-right: solid 1px black;
    padding-right: 10px;
}

.menu--account .menu li,
.onset-login-nav li {
    display: inline;
}

.menu--account .menu li a,
.onset-login-nav #welcome-user li a {
    padding: 8px;
    border-radius: 4px;
    text-decoration: none;
    color: #2f2f2f;
}

.menu--account .menu li a:hover,
.onset-login-nav #welcome-user li a:hover {
    color: #49c1db;
}

