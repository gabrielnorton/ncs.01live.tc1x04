<!-- menu dropdown -->
<script type="text/javascript">
var elements = document.getElementById('block-volt-main-menu').getElementsByTagName('ul')[0];
var flag = 0;
var sub = 0;
var items = elements.getElementsByTagName('li');
for (i = 0; i < items.length; ++i) {
  if (i < 1) {
    items[i].style.display = 'block';
  } else {
    items[i].style.display = 'none';
  }
}
document.getElementById("block-volt-main-menu").addEventListener("click", function(event) {
  var expand;
  var issub = event.target.childElementCount > 1 ? true : false;
  if (issub) {
    var items = event.target.getElementsByTagName('li');
    if (sub == 0) {
      expand = true;
      sub = 1;
    } else if (sub == 1) {
      expand = false;
      sub = 0;
    }
  } else {
    var items = elements.getElementsByTagName('li');
    if (flag == 0) {
      expand = true;
      flag = 1;
    } else if (flag == 1) {
      expand = false;
      flag = 0;
    }
  }
  if (expand) {
    event.preventDefault();
    for (i = 0; i < items.length; ++i) {
      items[i].style.display = 'block';
      if (items[i].getElementsByTagName('ul').length > 0) {
        i = i + items[i].getElementsByTagName('ul')[0].childElementCount;
        sub = 0;
      }
    }
  } else {
    if (issub) {
      var i = 0;
    } else {
      var i = 1
    }
    for (i; i < items.length; ++i) {
      items[i].style.display = 'none';
    }
    if (issub && sub === 1) {
      sub = 0;
    } else if (!issub && flag === 1) {
      flag = 0;
    }
  }
});

</script>
