body {
    padding: 20px;
}


/* start css fixes */
  /* the hidden.module.css does not load on amp pages */
  h2.visually-hidden {
      display: none;
  }
/* end css fixes */

/* navigation */
nav#block-volt-main-menu > ul {
    border-bottom: solid 2px #da0b0b;
    padding-bottom:10px;
}
nav#block-volt-main-menu > ul li a {
    padding: 10px;
    display:inline-block;
    color: black;
}
nav#block-volt-main-menu > ul li a:focus,
nav#block-volt-main-menu > ul li a:hover {
    background-color: #52c3e3;
    text-decoration: none;
}

/* header and branding */
div#block-volt-ncs-primary-branding {
    text-align:center;
}

div#block-volt-ncs-primary-branding .site-branding__logo amp-img {
    max-width: 80%;
    margin: 0 auto;
}

.region.region-footer.footer {
    background: #464a51;
    padding: 20px;
    color: white;
    text-align:center;
}

/* node css */
article .field--name-field-byline {
  font-weight:bold;
}

article .field--name-field-byline-attribute {
  color: #8c8f90;
}